#!/bin/bash

set -e

if [ "$1" = "remove" ] ; then
	/etc/init.d/homekid stop
	
	echo -n "removing log files: "
	rm -f /opt/homeki/stdout.log
	rm -f /opt/homeki/stderr.log
	rm -f /opt/homeki/homeki.pid
	echo "done"
	
	echo -n "removing etc/rc2.d/S99homeki: "
	rm -f /etc/rc2.d/S99homeki
	echo "done"
	
	mkdir -p /home/homeki
	
	echo -n "backing up db: "
	mv -f /opt/homeki/db /home/homeki/`date +%Y%m%d-%H%M%S`-db
	echo "done"
fi

exit 0