#!/bin/sh

set -e

if [ "$1" = "remove" ] ; then
	/etc/init.d/homekid stop
	rm -f /opt/homeki/stdout.log
	rm -f /opt/homeki/stderr.log
	rm -f /opt/homeki/homeki.pid
	rm -f /etc/rc2.d/S99homeki
	mkdir -p /home/homeki
	mv -f /opt/homeki/homeki.db /home/homeki/`date +%Y%m%d-%H%M%S`-homeki.db
fi

exit 0